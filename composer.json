{
	"name": "vanda/cms",
	"description": "Vanda is a lightweight & flexible PHP CMS framework.",
	"homepage": "https://vanda.io/",
	"type": "project",
	"license": "MIT",
	"keywords": [
		"cms",
		"framework",
		"vanda"
	],
	"authors": [
		{
			"name": "Nat Withe",
			"email": "nat@withnat.com",
			"homepage": "https://withnat.com/"
		}
	],
	"config": {
		"sort-packages": true
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require": {
		"php": "^7.2 || ^8.0",
		"ext-exif": "*",
		"ext-fileinfo": "*",
		"ext-ftp": "*",
		"ext-gd": "*",
		"ext-imagick": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-pdo": "*",
		"ext-readline": "*",
		"ext-mbstring": "*",
		"ext-simplexml": "*",
		"mobiledetect/mobiledetectlib": "^2.8"
	},
	"require-dev": {
		"ext-xdebug": "*",
		"mockery/mockery": "^1.3",
		"php-mock/php-mock": "^2.3",
		"phpunit/phpunit": "^8.0 || ^9.0 || ^10.0",
		"squizlabs/php_codesniffer": "^3.3"
	}
}
